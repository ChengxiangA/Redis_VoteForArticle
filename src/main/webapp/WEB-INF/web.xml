<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UP</servlet-name>
        <servlet-class>com.chengxiang.servlet.UpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UP</servlet-name>
        <url-pattern>/up</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DOWN</servlet-name>
        <servlet-class>com.chengxiang.servlet.DownServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DOWN</servlet-name>
        <url-pattern>/down</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SORT</servlet-name>
        <servlet-class>com.chengxiang.servlet.SortServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SORT</servlet-name>
        <url-pattern>/sort</url-pattern>
    </servlet-mapping>
</web-app>